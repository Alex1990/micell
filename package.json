{
  "name": "micellar",
  "version": "0.1.0",
  "description": "A set of functions for web development",
  "main": "lib/index.js",
  "engines": {
    "node": ">=4.0.0"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist lib es",
    "lint": "eslint src test",
    "test": "cross-env BABEL_ENV=commonjs jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "npm run build:es && npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "cross-env BABEL_ENV=production babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development webpack",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production webpack",
    "prepare": "npm run clean && npm run lint && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Alex1990/micellar.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "keywords": [
    "micellar",
    "utility",
    "util"
  ],
  "author": "Alex Chao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alex1990/micellar/issues"
  },
  "homepage": "https://github.com/Alex1990/micellar#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "cross-env": "^5.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^1.1.2",
    "jest": "^20.0.4",
    "lint-staged": "^7.3.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.4.1"
  },
  "precommit": [
    "lint"
  ]
}
